<apex:page >
    <style type="text/css">
        #vf-page * {
            font-family: "ProximaNovaSoft-Regular", Calibri, 
                "Gill Sans", "Gill Sans MT", Candara, Segoe, "Segoe UI", 
                 Arial, sans-serif;
        }

        #vf-page .contactTable {
            width: 100%;
            margin-bottom: 50px;
        }

        #vf-page table.contactTable th,
        #vf-page table.contactTable td {
            border-bottom: 1px solid #4a4a56;
            padding: 5px;
            color: #4a4a56;
        }

        #vf-page table.contactTable tr:hover td {
            font-weight: bold;
        }

        /** Active Row */
        #vf-page .activeRow {
            background-color: #f1c516;
        }

        /* Add animation */
        #vf-page .my-repeat-animation.ng-enter.ng-enter-active, 
        #vf-page .my-repeat-animation.ng-leave {
            opacity: 1;
            -webkit-transition: opacity 300ms ease-in-out;
            -moz-transition: opacity 300ms ease-in-out;
            transition: opacity 300ms ease-in-out;
        }

        /* Remove animation */
        #vf-page .my-repeat-animation.ng-leave.ng-leave-active, 
        #vf-page .my-repeat-animation.ng-enter {
            opacity: 0;
            -webkit-transition: opacity 400ms ease-in;
            -moz-transition: opacity 400ms ease-in;
            transition: opacity 400ms ease-in;
        }
    </style>
</apex:page>